#FIRST REMOVE OLD BARNUMBERs

for i in *.krn 
do
	sed -i 's/=[0-9][0-9]*/=/g' $i
done


CURMEAS=1


for i in *a.krn
do
	num -ef -n '=' -o $CURMEAS $i  > file
	mv file $i
	
nMeasuresCur=`grep -c '=' $i`
let CURMEAS=$(expr $CURMEAS + $nMeasuresCur)

echo $CURMEAS

done

CURMEAS=1
for i in *b.krn
do
	num -ef -n '=' -o $CURMEAS $i  > file
	mv file $i
	
nMeasuresCur=`grep -c '=' $i`
let CURMEAS=$(expr $CURMEAS + $nMeasuresCur)

echo $CURMEAS

done
